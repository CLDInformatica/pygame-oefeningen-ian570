{
    "name": "Python 3",
    "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
    "features": {
        "ghcr.io/devcontainers/features/desktop-lite:1": {}
    },


    "forwardPorts": [
        6080
    ],
    "portsAttributes": {
        "6080": {
            "label": "desktop"
        }
    },

    "runArgs": ["--shm-size=1g"],
    
    "postCreateCommand": "pip install pygame"
}